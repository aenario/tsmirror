{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "stripInternal": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
